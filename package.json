{
  "name": "react-cool-starter",
  "version": "2.3.0",
  "description":
    "A starter boilerplate for an universal web application with the best development experience and best practices.",
  "main": "index.js",
  "engines": {
    "node": ">=6.0",
    "npm": ">=3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wellyshen/react-cool-starter"
  },
  "keywords": [
    "starter",
    "boilerpate",
    "universal",
    "react",
    "redux",
    "react router v4",
    "express",
    "webpack v3",
    "es6",
    "flow",
    "code splitting",
    "hot reloading",
    "babel",
    "postcss",
    "jest",
    "unit testing",
    "performance optimizing"
  ],
  "author": "WellyShen <hivoid19@gmail.com> (https://github.com/wellyshen)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wellyshen/react-cool-starter/issues"
  },
  "homepage": "https://github.com/wellyshen/react-cool-starter",
  "scripts": {
    "start": "better-npm-run start",
    "start:dashboard": "webpack-dashboard yarn start",
    "start:production": "yarn build && yarn start:prod",
    "start:prod": "better-npm-run start:prod",
    "build": "yarn clean:build && better-npm-run build",
    "analyze": "yarn clean:build && better-npm-run analyze",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "better-npm-run lint:js",
    "lint:style": "better-npm-run lint:style",
    "flow": "better-npm-run flow",
    "flow:stop": "better-npm-run flow:stop",
    "test": "better-npm-run test",
    "test:watch": "yarn test --watch",
    "clean:all": "yarn clean:build && yarn clean:test",
    "clean:build": "better-npm-run clean:build",
    "clean:test": "better-npm-run clean:test",
    "coveralls": "better-npm-run coveralls && yarn clean:test"
  },
  "betterScripts": {
    "start": {
      "command": "nodemon ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start:prod": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "build": {
      "command":
        "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "analyze": {
      "command":
        "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "analyze"
      }
    },
    "lint:js": {
      "command": "eslint --fix ./src ./tools ./index.js"
    },
    "lint:style": {
      "command": "stylelint --fix \"./src/**/*.scss\""
    },
    "flow": {
      "command": "flow"
    },
    "flow:stop": {
      "command": "flow stop"
    },
    "test": {
      "command": "jest --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "clean:build": {
      "command": "rimraf ./public/assets"
    },
    "clean:test": {
      "command": "rimraf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "useBuiltIns": true
        }
      ],
      "react",
      "stage-0",
      "flow"
    ],
    "plugins": ["loadable-components/babel", "dynamic-import-node", "lodash"],
    "env": {
      "production": {
        "plugins": ["transform-remove-console"]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": ["plugin:lodash-fp/recommended", "airbnb", "prettier"],
    "plugins": ["lodash-fp", "react", "prettier"],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./tools/webpack/config.babel.js"
        }
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "global-require": "off",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "function-paren-newline": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "specialLink": ["to"]
        }
      ],
      "lodash-fp/use-fp": "off",
      "lodash-fp/consistent-name": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    },
    "globals": {
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DEV__": true
    }
  },
  "eslintIgnore": ["tools/flow"],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "./node_modules/prettier-stylelint/config.js"
    ],
    "rules": {
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": ["global", "local"]
        }
      ]
    }
  },
  "jest": {
    "setupFiles": ["raf/polyfill", "<rootDir>/tools/jest/setup.js"],
    "globals": {
      "__DEV__": true
    },
    "collectCoverageFrom": [
      "src/containers/App/App.js",
      "src/containers/Home/Home.js",
      "src/containers/UserInfo/UserInfo.js",
      "src/containers/NotFound/NotFound.js",
      "src/components/**/*.js",
      "src/actions/**/*.js",
      "src/reducers/**/*.js",
      "!src/reducers/index.js",
      "!src/**/__tests__"
    ],
    "moduleNameMapper": {
      ".*\\.(css|scss|sass)$": "<rootDir>/tools/jest/styleMock.js",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
        "<rootDir>/tools/jest/assetMock.js"
    }
  },
  "nodemonConfig": {
    "watch": ["src/server.js", "src/helpers/renderHtml.js"]
  },
  "browserslist": ["> 1%", "last 2 versions"],
  "dependencies": {
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "chalk": "^2.3.2",
    "compression": "^1.7.2",
    "express": "^4.16.2",
    "helmet": "^3.12.0",
    "history": "^4.7.2",
    "hpp": "^0.2.2",
    "loadable-components": "^1.1.1",
    "lodash": "^4.17.5",
    "morgan": "^1.9.0",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.0.0",
    "react-redux": "^5.0.7",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.4.0",
    "serve-favicon": "^2.4.5"
  },
  "devDependencies": {
    "asset-require-hook": "^1.2.0",
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^8.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.4",
    "babel-minify-webpack-plugin": "^0.3.0",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-transform-remove-console": "^6.9.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "better-npm-run": "^0.1.0",
    "compression-webpack-plugin": "^1.1.10",
    "coveralls": "^3.0.0",
    "cross-spawn": "^6.0.5",
    "css-loader": "^0.28.10",
    "css-modules-require-hook": "^4.2.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "extracted-loader": "^1.0.6",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.66.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-minifier": "^3.5.10",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^4.1.0",
    "jest": "^22.4.2",
    "nock": "^9.2.3",
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.1",
    "opn": "^5.2.0",
    "postcss": "^6.0.19",
    "postcss-loader": "^2.1.1",
    "prettier": "^1.11.1",
    "prettier-stylelint": "^0.4.2",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.2",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-webpack-plugin": "^0.10.3",
    "url-loader": "^1.0.1",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.21.2"
  },
  "resolutions": {
    "webpack-sources": "^1.0.1"
  }
}
