{
  "name": "react-cool-starter",
  "version": "3.2.1",
  "description": "A starter boilerplate for an universal web application with the best development experience and best practices.",
  "main": "index.ts",
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wellyshen/react-cool-starter"
  },
  "keywords": [
    "starter",
    "boilerpate",
    "universal",
    "react",
    "redux",
    "react router",
    "express",
    "webpack",
    "es6+",
    "typescript",
    "code splitting",
    "hot reloading",
    "babel",
    "postcss",
    "jest",
    "unit testing",
    "performance optimizing"
  ],
  "author": "WellyShen <hivoid19@gmail.com> (https://github.com/wellyshen)",
  "license": "MIT",
  "homepage": "https://github.com/wellyshen/react-cool-starter",
  "bugs": {
    "url": "https://github.com/wellyshen/react-cool-starter/issues"
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "*.sass"
  ],
  "scripts": {
    "dev": "better-npm-run dev",
    "start": "better-npm-run start",
    "build": "yarn clean:build && better-npm-run build",
    "analyze": "yarn clean:build && better-npm-run analyze",
    "type-check": "better-npm-run type-check",
    "type-check:watch": "yarn type-check --watch",
    "lint": "npm-run-all --parallel lint:*",
    "lint:code": "better-npm-run lint:code",
    "lint:style": "better-npm-run lint:style",
    "test": "better-npm-run test",
    "test:watch": "yarn test --watch",
    "test:update-snapshot": "yarn test -u",
    "clean": "npm-run-all --parallel clean:*",
    "clean:build": "better-npm-run clean:build",
    "clean:test": "better-npm-run clean:test",
    "coveralls": "yarn clean:test && better-npm-run coveralls"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec ts-node --files .",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start": {
      "command": "ts-node --transpile-only --files .",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "analyze": {
      "command": "webpack -p --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "analyze"
      }
    },
    "type-check": {
      "command": "tsc --noEmit"
    },
    "lint:code": {
      "command": "eslint --fix ."
    },
    "lint:style": {
      "command": "stylelint --fix \"./**/*.css\" \"./**/*.scss\" \"./**/*.sass\" \"!coverage\""
    },
    "test": {
      "command": "jest --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "clean:build": {
      "command": "rimraf ./public/assets"
    },
    "clean:test": {
      "command": "rimraf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.{css,scss,sass}": "stylelint --fix",
    "*.{json,md}": "prettier --write"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "useBuiltIns": "usage",
          "corejs": "3.0.0"
        }
      ],
      "@babel/typescript",
      "@babel/react"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "@loadable/babel-plugin",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-remove-console"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/react"
    ],
    "plugins": [
      "@typescript-eslint",
      "react",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "node": {},
        "webpack": {
          "config": "./tools/webpack/config.babel.js"
        }
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "global-require": "off",
      "react/prop-types": "off",
      "react-hooks/exhaustive-deps": "off",
      "react/jsx-props-no-spreading": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".ts",
            ".tsx",
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ],
      "@typescript-eslint/ban-ts-ignore": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-var-requires": "off"
    },
    "globals": {
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DEV__": true
    }
  },
  "eslintIgnore": [
    "public/assets"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended-scss",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "public/assets/**/*.scss"
    ]
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tools/jest/setup.ts"
    ],
    "globals": {
      "__DEV__": true
    },
    "collectCoverageFrom": [
      "src/actions/**/*.ts",
      "src/reducers/**/*.ts",
      "src/app/**/*.tsx",
      "src/pages/**/*.tsx",
      "src/components/**/*.tsx",
      "!src/actions/index.ts",
      "!src/reducers/index.ts",
      "!src/components/index.ts",
      "!src/pages/index.ts",
      "!src/pages/Home/index.js",
      "!src/pages/UserInfo/index.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      ".*\\.(css|scss|sass)$": "<rootDir>/tools/jest/styleMock.ts",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/jest/assetMock.ts"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/server.tsx",
      "src/utils/renderHtml.ts"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@hot-loader/react-dom": "^16.10.2",
    "@loadable/babel-plugin": "^5.10.3",
    "@loadable/component": "^5.10.3",
    "@loadable/server": "^5.10.3",
    "asset-require-hook": "^1.2.0",
    "autoprefixer": "^9.7.0",
    "axios": "^0.19.0",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "better-npm-run": "^0.1.1",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "connected-react-router": "^6.5.2",
    "core-js": "^3.3.5",
    "css-modules-require-hook": "^4.2.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "history": "^4.10.1",
    "hpp": "^0.2.2",
    "html-minifier": "^4.0.0",
    "morgan": "^1.9.1",
    "node-sass": "^4.13.0",
    "normalize.css": "^8.0.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-helmet": "^5.2.1",
    "react-hot-loader": "^4.12.15",
    "react-redux": "^7.1.1",
    "react-router": "^5.1.2",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^2.1.0",
    "serve-favicon": "^2.5.0",
    "ts-node": "^8.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@loadable/webpack-plugin": "^5.7.1",
    "@types/compression": "^1.0.1",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^24.0.20",
    "@types/loadable__component": "^5.10.0",
    "@types/loadable__server": "^5.9.1",
    "@types/morgan": "^1.7.37",
    "@types/react": "^16.9.11",
    "@types/react-dev-utils": "^9.0.1",
    "@types/react-dom": "^16.9.3",
    "@types/react-helmet": "^5.0.13",
    "@types/react-redux": "^7.1.5",
    "@types/react-router": "^5.1.2",
    "@types/react-router-config": "^5.0.1",
    "@types/react-router-dom": "^5.1.0",
    "@types/react-test-renderer": "^16.9.1",
    "@types/redux-mock-store": "^1.0.1",
    "@types/serialize-javascript": "^1.5.0",
    "@types/serve-favicon": "^2.2.31",
    "@types/webpack-env": "^1.14.1",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^3.0.0",
    "coveralls": "^3.0.7",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^3.0.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "husky": "^3.0.9",
    "identity-obj-proxy": "^3.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "mini-css-extract-plugin": "^0.8.0",
    "nock": "^11.6.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss": "^7.0.21",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "raf": "^3.4.1",
    "react-test-renderer": "^16.11.0",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "stylelint": "^11.1.1",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.12.0",
    "terser-webpack-plugin": "^2.2.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4",
    "url-loader": "^2.2.0",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-manifest-plugin": "^2.2.0"
  }
}
